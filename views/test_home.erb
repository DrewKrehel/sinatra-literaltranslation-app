    <style>
      html {
        min-height: 100%;

      }
      /*
      * {
        border: 1px red dashed
      }
      */
      body {
        min-height: 100%;
        padding: 40px 0px;
        background: linear-gradient(150deg, #003f5b, #07405e, #2b426f, #743d91, #df3f7a, #ff7741, #ff951c, #ff9913); /* made at https://learnui.design/tools/gradient-generator.html */
        color: white;
        font-family: merriweather;
      }

      a {
        color: rgb(255, 255, 255);
        text-decoration: none;
      }

      .link-item {
        background-color: rgba(149, 123, 173, 0.5);
        border-radius: 1000px;
        padding: 5px;
        padding-right: 53px;
        box-shadow: #07405e 4px 4px 10px 0px;
      }

      .profile-image {
        width: 128px;
        height: 128px;
        object-fit: cover;
        border-radius: 128px;
